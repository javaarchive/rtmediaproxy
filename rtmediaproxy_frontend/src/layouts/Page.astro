---
const { title } = Astro.props;
const themed = Astro.props.themed ? true : false;
---
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{title}</title>
    {
        themed && <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@picocss/pico@2/css/pico.min.css">
    }
  </head>
  <body>
    <slot />    
  </body>
</html>